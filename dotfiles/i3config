exec redshift -O 25000

new_window pixel 5
gaps inner 10

client.unfocused #333333 #333333 #FFFFFF #333333
client.focused_inactive #333333 #333333 #FFFFFF #000000
client.focused #000000 #000000 #FFFFFF #000000
