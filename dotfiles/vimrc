call plug#begin('~/.vim/plugged')
Plug 'vim-airline/vim-airline'
Plug 'ctrlpvim/ctrlp.vim'
Plug 'nanotech/jellybeans.vim'
Plug 'scrooloose/nerdtree'
Plug 'chiel92/vim-autoformat'
Plug 'vim-airline/vim-airline-themes'
Plug 'tpope/vim-fugitive'
Plug 'vim-scripts/Align'
Plug 'tpope/vim-fugitive'
Plug 'vim-scripts/grep.vim'
Plug 'noahfrederick/vim-hemisu'
Plug 'mattesgroeger/vim-bookmarks'
Plug 'tacahiroy/ctrlp-funky'
Plug 'xuyuanp/nerdtree-git-plugin'
Plug 'airblade/vim-gitgutter'
call plug#end()

" colo jellybeans
" colo delek
colo hemisu
set tabstop=2 shiftwidth=2 sts=2
set nowrap
set expandtab number noswapfile
set guioptions= guifont=Monaco\ 10
set clipboard=unnamedplus

nnoremap tl :tabnext<CR>
nnoremap th :tabprevious<CR>
nnoremap te :tabnew<CR>
nnoremap tn :tabnew<CR>
nnoremap tq :tabclose<CR>

map <C-k> :CtrlPFunky<CR>

noremap <C-S-i> :Autoformat<CR>
map <C-S-b> :make build<CR>
map <C-S-m> :make

let g:ctrlp_custom_ignore = 'node_modules\|DS_Store\|git|__pycache__'
let NERDTreeIgnore = ['\.pyc$', '__pycache__']

let g:bookmark_save_per_working_dir = 1
let g:bookmark_auto_save = 1

function! BookmarkMapKeys()
  nmap mm :BookmarkToggle<CR>
  nmap mi :BookmarkAnnotate<CR>
  nmap mn :BookmarkNext<CR>
  nmap mp :BookmarkPrev<CR>
  nmap ma :BookmarkShowAll<CR>
  nmap mc :BookmarkClear<CR>
  nmap mx :BookmarkClearAll<CR>
  nmap mkk :BookmarkMoveUp
  nmap mjj :BookmarkMoveDown
endfunction
function! BookmarkUnmapKeys()
  unmap mm
  unmap mi
  unmap mn
  unmap mp
  unmap ma
  unmap mc
  unmap mx
  unmap mkk
  unmap mjj
endfunction
autocmd BufEnter * :call BookmarkMapKeys()
autocmd BufEnter NERD_tree_* :call BookmarkUnmapKeys()

let g:NERDTreeIndicatorMapCustom = {
      \ "Modified"  : "*",
      \ "Staged"    : "+",
      \ "Untracked" : "u",
      \ "Renamed"   : ">",
      \ "Unmerged"  : "!",
      \ "Deleted"   : "-",
      \ "Dirty"     : ".",
      \ "Clean"     : " ",
      \ 'Ignored'   : 'x',
      \ "Unknown"   : "?"
      \ }
